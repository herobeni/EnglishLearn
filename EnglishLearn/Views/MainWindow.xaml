<Window x:Class="EnglishLearn.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnglishLearn.Views"
        xmlns:UserControls="clr-namespace:EnglishLearn.Views"
        xmlns:ViewModels="clr-namespace:EnglishLearn.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900">
    <Window.DataContext>
        <ViewModels:MainWindowVM/>
    </Window.DataContext>
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="686"/>
            <ColumnDefinition Width="206"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="31"/>
            <RowDefinition Height="502"/>
            
        </Grid.RowDefinitions>
        <ListView FontSize="20" ItemsSource="{Binding ViewList.View}" Grid.Row="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Слово" DisplayMemberBinding="{Binding Word}" Width="222"></GridViewColumn>
                    <GridViewColumn Header="Перевод" DisplayMemberBinding="{Binding Translation}" Width="222"></GridViewColumn>
                    <GridViewColumn Header="Транскрипция" DisplayMemberBinding="{Binding Transcription}" Width="242"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,2,0,0">
            <TextBox Text="{Binding AddWord, UpdateSourceTrigger=PropertyChanged}" TextAlignment="Center" FontSize="20" Width="222"/>
            <TextBox Text="{Binding AddTranslation,UpdateSourceTrigger=PropertyChanged}" TextAlignment="Center" FontSize="20" Width="223"/>
            <TextBox Text="{Binding AddTranscription,UpdateSourceTrigger=PropertyChanged}" TextAlignment="Center" FontSize="20" Width="214"/>
            <Button Width="25" Content="+" Focusable="False" Command="{Binding buttonCommand}" />
        </StackPanel>
        
        
    </Grid>
</Window>
